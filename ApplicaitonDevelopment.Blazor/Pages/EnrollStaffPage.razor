                <input type="password" class="form-control password" placeholder="Password" />
                <label for="floatingPassword">Password</label>
            </div>

            <div>
                <button class="w-100 btn btn-lg btn-danger" type="submit" style="background-color: #FF735C; font-weight: 600;">
                    Enroll Staff
                </button>
            </div>
        </form>
    </div>
</div>

