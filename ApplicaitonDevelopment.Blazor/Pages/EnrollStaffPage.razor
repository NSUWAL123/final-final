        <form class="text-center d-flex flex-column gap-4">
            <h2 class="" style="color: #130666;">Enroll Staff</h2>

            <div class="form-floating">
                <input type="text" class="form-control username" placeholder="Full Name" />
                <label for="floatingInput">Full Name</label>
            </div>

            <div class="form-floating">
                <input type="text" class="form-control username" placeholder="Email" />
