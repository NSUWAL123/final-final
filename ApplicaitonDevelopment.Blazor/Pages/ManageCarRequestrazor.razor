@page "/manage-car-request"

@*header*@
<div class="d-flex justify-content-center my-3">
    <h2 class="" style="color: #130666;">Manage Car Request</h2>
</div>

<div class="d-flex flex-column gap-4">
    @for (var i = 0; i < 6; i++)
    {
        <div style="background-color: #fcfbed" class="p-4 rounded-3">
            @*upper-container*@
            <div class="d-flex justify-content-between">
                @*upper-inner-left*@
                <div>
                    @*from-date*@
                    <div class="d-flex gap-2">
                        <label class="fw-bold">From:</label>
                        <p>05/02/2023</p>
                    </div>
                    @*to-date*@
                    <div class="d-flex gap-2">
                        <label class="fw-bold">To:</label>
                        <p>05/02/2023</p>
                    </div>
                </div>
                @*upper-inner-right*@
                <div class="d-flex gap-2">
                    <label class="fw-bold">Requested by:</label>
                    <p>Nishit Suwal</p>
                </div>
            </div>


            <div class="d-flex justify-content-center" style="gap: 100px">
                <div class="position-relative w-25 d-flex justify-content-center align-items-center">
                    <img src="https://res.cloudinary.com/djiwumijb/image/upload/v1682438030/image_2_zaklig.jpg" class="w-100 rounded-3 shadow-lg" />
                    <div class="position-absolute bg-black text-white bg-opacity-50 w-100 d-flex justify-content-center align-items-center">
                        @if (true)
                        {
                            <h5>Available</h5>
                        }
                        else
                        {
                            <h5>Not Available</h5>
                        }
                    </div>
                </div>
                <div class="d-flex flex-column gap-3">
                    <div>
                        <h5 style="text-decoration: underline;">Requested Car:</h5>
                    </div>
                    @*middle-container*@
                    <div class="d-flex" style="gap: 100px;">
                        <div>
                            @*car-name*@
                            <div class="d-flex gap-2">
                                <label class="fw-bold">Car Name:</label>
                                <p>Suzuki</p>
                            </div>
                            @*car-type*@
                            <div class="d-flex gap-2">
                                <label class="fw-bold">Type:</label>
                                <p>Suv</p>
                            </div>
                        </div>
                        <div>
                            @*model*@
                            <div class="d-flex gap-2">
                                <label class="fw-bold">Model:</label>
                                <p>Swift</p>
                            </div>
                            @*rental-fee*@
                            <div class="d-flex gap-2">
                                <label class="fw-bold">Rental Fee:</label>
                                <p>Rs. 15000</p>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center gap-4">
                        <button style="border:none">View Citizenship</button>
                        <button style="border:none">View License</button>
                    </div>
                    <div class="w-100 d-flex gap-5 justify-content-center">
                        <button class="bg-success text-white border-0 rounded-3 px-3 py-1">Accept</button>
                        <button class="bg-danger text-white border-0 rounded-3 px-3 py-1">Decline</button>
                    </div>
                </div>
            </div>


        </div>
    }
</div>



